{%extends "layout.njk" %}

{%block head%}
    <title>Receitas - Foodfy</title>
{%endblock%}

{%block content %}
        <section class="recipes">
            
            {%for item in items %}
                <div class="card" id="{{loop.index0}}">
                    <div class="img-container" >
                        <img src="{{item.image}}" alt="Foto de {{item.title}}">
                        <p class="R-title">{{item.title}}</p>
                        <p class="S-title">por {{item.author}}</p>
                    </div>
                </div> 

            {%endfor%}
        </section>

{%endblock%}