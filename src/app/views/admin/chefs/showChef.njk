{%extends "privateLayout.njk" %}

{%block head%}
    <title>Chef</title>
{%endblock%}

{%block content %}
<section class="show"> 
    <div class='top'>
        <h1 class="showTitle">Chef: {{chefs.name}}</h1>
        <a class = "edit" href="/admin/chefs/{{chefs.id}}/edit">Editar Chef</a> 
    </div> 

    <div class="chefInfo">
        <img src="{{files[0].src}}" alt="imagem de {{chef.name}} " class="chefImg">
        <h3 id="title">{{chefs.name}}</h3>
        {% if chefs.total_recipes == null %}
            <p class=total>0 receitas</p>
        {% else %}
            <p class=total>{{chefs.total_recipes}} receitas</p>
        {% endif %}
    </div>

    <h3 id="recipes">Receitas</h3>
    <div class="recipesCard">
                {%for recipe in recipeData%}
                    {%if recipe.chef_id == chef.id %}
                        <div class="recipeCard">
                            <img src="{{recipe.image}}" alt="foto de {{recipe.name}}" id="recipeImg">
                            <div class="details">
                                <h4>{{recipe.title}}</h4>
                                {%for chef in chefs%}
                                        {% if chefs.id == recipe.chef_id %}
                                           <p>por {{chef.name}}</p> 
                                        {% endif%}
                                {%endfor%}
                                <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                            </div>
                            
                        </div> 
                    {%endif%}
                        
                {%endfor%}
    </div>
</section> 
{%endblock%}