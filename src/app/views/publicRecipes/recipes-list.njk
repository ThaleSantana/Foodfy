{%extends "layout.njk" %}

{%block head%}
    <title>Receitas - Foodfy</title>
{%endblock%}

{%block content %}
        <section class="recipes">
            
           <section >
                <div class="indexcards">
                    {%for recipe in RecipeData%}
                            <div class="indexCard">
                                <img src="{{recipe.image}}" alt="foto de {{recipe.name}}" id="indexRecipeImg">
                                <div class="indexDetails">
                                    <h4>{{recipe.title}}</h4>
                                    {%for chefs in chef%}
                                        {% if chefs.id == recipe.chef_id %}
                                           <p>por {{chefs.name}}</p> 
                                        {% endif %} 
                                    {%endfor%}  
                                </div>
                            </div>                        
                    {%endfor%}
                </div>
            </section>
            
        </section>

{%endblock%}